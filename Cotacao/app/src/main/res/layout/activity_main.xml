<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#3b343b">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Cotação Dolar"
                android:id="@+id/textView"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#57a890"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="34dp"
                android:gravity="center"
                android:paddingTop="40dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="APP PARA CALCULAR COTAÇÃO DÓLAR"
                android:id="@+id/textView2"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/scrollView"
                android:background="#57a890"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:layout_alignEnd="@+id/scrollView"
                android:gravity="center"
                android:paddingBottom="40dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Calcular Cotação"
                android:id="@+id/button_calcular"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:background="#3a8a71" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="1"
                android:baselineAligned="false"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_dolar"
                    android:inputType="text"
                    android:hint="Dolar"
                    android:background="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:layout_margin="20dp"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_cotacao"
                    android:layout_weight="0.27"
                    android:inputType="text"
                    android:hint="Cotação"
                    android:background="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:layout_margin="20dp"
                    android:padding="10dp" />

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="RESULTADO"
                android:id="@+id/textView3"
                android:gravity="center"
                android:textColor="#ffffff"
                android:paddingTop="30dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_resultado"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:hint="R$0,00"
                android:paddingTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:textColorHint="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
